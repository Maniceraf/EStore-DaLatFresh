@model IEnumerable<WebStore.Entities.ProductType>

@{
    ViewData["Title"] = "Index";
}

<div class="row mb-4">
    <div class="col-12">
        <a asp-action="Create" type="button" class="btn bg-info btn-sm">Add New</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div class="dataTables_info mb-4" id="example2_info" role="status" aria-live="polite">Showing @Model.Count() entries</div>
                </div>
                <div class="col-sm-12 col-md-7">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" aria-describedby="example2_info" style="text-align: center">
                        <thead>
                            <tr>
                                <th style="width: 15%;">
                                    Name
                                </th>
                                <th style="width: 15%;">
                                    Alias
                                </th>
                                <th style="width: 20%;">
                                    Description
                                </th>
                                <th style="width: 15%;">
                                    Created On UTC
                                </th>
                                <th style="width: 15%;">
                                    Updated On UTC
                                </th>
                                <th style="width: 10%;">
                                    Category
                                </th>
                                <th style="width: 10%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width: 15%;">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td style="width: 15%;">
                                        @Html.DisplayFor(modelItem => item.Alias)
                                    </td>
                                    <td style="width: 20%;">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td style="width: 15%;">
                                        @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                                    </td>
                                    <td style="width: 15%;">
                                        @Html.DisplayFor(modelItem => item.UpdatedOnUtc)
                                    </td>
                                    <td style="width: 10%;">
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td style="width: 10%;">
                                        <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn bg-info btn-sm"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn bg-danger btn-sm"><i class="far fa-trash-alt"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn bg-warning btn-sm"><i class="far fa-file-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>