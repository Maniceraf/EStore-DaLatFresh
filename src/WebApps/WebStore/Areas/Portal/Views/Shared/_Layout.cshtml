
@{
    string menu = ViewData["menu"]?.ToString() ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DLF Portal</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/portal/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/portal/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/portal/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/portal/plugins/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" href="~/portal/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/portal/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/portal/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/portal/plugins/summernote/summernote-bs4.min.css">
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/portal/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="index3.html" class="brand-link">
                <img src="~/portal/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">DLF Portal</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/portal/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Hung Nguyen</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link @(menu == "Dashboard" ? "active" : "")" asp-area="Portal" asp-controller="Dashboard" asp-action="Index">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(menu == "Products" ? "active" : "")" asp-area="Portal" asp-controller="Products" asp-action="Index">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Products
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <ol class="breadcrumb float-sm-left">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">@menu</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2024 <a href="#">DLF</a>.</strong>
            All rights reserved.
        </footer>
    </div>
    <script src="~/portal/plugins/jquery/jquery.min.js"></script>
    <script src="~/portal/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/portal/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/portal/plugins/chart.js/Chart.min.js"></script>
    <script src="~/portal/plugins/sparklines/sparkline.js"></script>

    <script src="~/portal/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/portal/plugins/moment/moment.min.js"></script>
    <script src="~/portal/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/portal/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/portal/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/portal/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/portal/dist/js/adminlte.js"></script>
    <script src="~/portal/dist/js/demo.js"></script>
    <script src="~/portal/dist/js/pages/dashboard.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
