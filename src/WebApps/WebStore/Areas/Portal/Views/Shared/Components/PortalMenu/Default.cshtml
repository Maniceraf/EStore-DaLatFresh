@model List<WebStore.Areas.Portal.ViewModels.MenuViewModel>

<nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        @foreach(var item in Model)
        {
            <li class="nav-item">
                @{
                    if(item.IsActive)
                    {
                        <a class="nav-link active" style="pointer-events: none">
                            <i class="nav-icon @item.Icon"></i>
                            <p>
                                @item.Name
                            </p>
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" asp-area="Portal" asp-controller="@item.Controller" asp-action="@item.Action">
                            <i class="nav-icon @item.Icon"></i>
                            <p>
                                @item.Name
                            </p>
                        </a>
                    }
                }
            </li>
        }
    </ul>
</nav>